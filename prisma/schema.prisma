generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model AppUser {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  panels    Panel[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Panel {
  id        Int   @id @default(autoincrement())
  name      String
  clients PanelClient[]
  accounts PanelAccounts[]
  users AppUser[]
  PanelProvider PanelProvider[]
  PanelPlatform PanelPlatform[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model PanelClient {
  id        Int   @id @default(autoincrement())
  name      String
  phone     String
  email     String
  panel     Panel    @relation(fields: [panelId], references: [id])
  panelId   Int
  notes     String?   @default("")
  accounts PanelAccounts[]
  accountsStatus ClientAccountStatus[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([name, panelId])
}

model PanelAccounts {
  id        Int   @id @default(autoincrement())
  panel     Panel    @relation(fields: [panelId], references: [id])
  panelId   Int
  email     String
  password  String
  maxClients Int @default(1)
  notes     String?   @default("")
  buyCost Int @default(0)
  sellPrice Int @default(0)
  provider PanelProvider? @relation(fields: [providerId], references: [id])
  providerId Int?
  platform PanelPlatform? @relation(fields: [platformId], references: [id])
  platformId Int?
  clients   PanelClient[]
  clientsStatus ClientAccountStatus[]
  activatedAt DateTime
  expiresAt DateTime

}

model ClientAccountStatus {
  id        Int   @id @default(autoincrement())
  client    PanelClient @relation(fields: [clientId], references: [id])
  clientId  Int
  account   PanelAccounts @relation(fields: [accountId], references: [id])
  accountId Int
  lastPayAt DateTime
  expiresAt DateTime
  note      String
}

model PanelProvider {
  id      Int @id @default(autoincrement())
  panel   Panel @relation(fields: [panelId], references: [id])
  panelId Int
  name    String
  notes   String?

  accounts PanelAccounts[]
}

model PanelPlatform {
  id      Int @id @default(autoincrement())
  panel   Panel? @relation(fields: [panelId], references: [id])
  panelId Int?
  name    String
  icon    String

  PanelAccounts PanelAccounts[]
}